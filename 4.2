            satir.append(".")
        matris.append(satir)
    i=0
    j=0
    k=0
    for k in range(0,len(s)):
        matris[i][j]=s[k]
        i=i+1
        if i==n:
            j=j+1
            i=0
    for k in range(0,n):
        print(matris[k])
    i=0
    j=0
    while i<n:
        if matris[i][j]!=".":
            kripto=kripto+matris[i][j]
